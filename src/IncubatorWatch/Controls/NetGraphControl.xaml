<UserControl x:Class="IncubatorWatch.Controls.NetGraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" mc:Ignorable="d"
             d:DesignHeight="247" d:DesignWidth="478" Name="NetMeterGadget" Background="DimGray">
    <Grid>
        <d3:ChartPlotter  Name="plotter" Margin="10,10,10,10" Grid.Column="1" Background="DimGray">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis Name="timeAxis" Visibility="Visible" />
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis Name="countAxis" Visibility="Visible" Width="35" Height="163" />
            </d3:ChartPlotter.VerticalAxis>
            <d3:Header Content="Température" FontSize="13" Foreground="Coral" />
            <d3:VerticalAxisTitle Name="VerticalAxisName"  Content="Degrée Celsius"  FontFamily="Segoe UI" FontSize="12" Foreground="Coral"/>
            <d3:HorizontalAxisTitle  Name="HorizontalAxisName"  Content="" FontSize="8" />
        </d3:ChartPlotter>
        <Label Content="0.0" Height="23" Margin="0,7,12,0" Name="lbl_MaxMarker" VerticalAlignment="Top" HorizontalAlignment="Right" Width="83" FontSize="11" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
        <Label Content="60 Secondes" FontSize="11" Height="26" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,0,20,82" Name="label3" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Width="98" />
    </Grid>
</UserControl>