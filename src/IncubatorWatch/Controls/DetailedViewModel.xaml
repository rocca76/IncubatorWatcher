<UserControl x:Class="IncubatorWatch.Controls.DetailedViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls1="clr-namespace:IncubatorWatch.Controls"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" mc:Ignorable="d"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" xmlns:my="clr-namespace:IncubatorWatch.Controls"
             d:DesignHeight="400" d:DesignWidth="600"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <TabControl Name="tabCtrlMother">
            <TabItem Header="Graphique">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="200*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="200*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <d3:ChartPlotter Name="plotterTemperature" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Margin="0,5">
                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalDateTimeAxis Name="temperatureTimeAxis" />
                        </d3:ChartPlotter.HorizontalAxis>
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalAxis Name="temperatureAxis"/>
                        </d3:ChartPlotter.VerticalAxis>
                        <d3:HorizontalLine Value="{Binding MaxLevel1}" Stroke="Red" StrokeThickness="1"/>
                        <d3:HorizontalLine Value="{Binding MinLevel1}" Stroke="Red" StrokeThickness="1"/>
                    </d3:ChartPlotter>
                    <d3:ChartPlotter Name="plotterRelativeHumidity" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Margin="0,5">
                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalDateTimeAxis Name="relativeHumidityTimeAxis" />
                        </d3:ChartPlotter.HorizontalAxis>
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalAxis Name="relativeHumidityAxis" />
                        </d3:ChartPlotter.VerticalAxis>
                    </d3:ChartPlotter>
                    <d3:ChartPlotter Name="plotterCO2" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Margin="0,5">
                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalDateTimeAxis Name="CO2TimeAxis" />
                        </d3:ChartPlotter.HorizontalAxis>
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalAxis Name="CO2Axis" />
                        </d3:ChartPlotter.VerticalAxis>
                    </d3:ChartPlotter>

                    <Button Content="Button" Name="button1" Height="25" Width="76" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Visibility="Hidden" />
                    <Button Content="Button" Name="button2" Height="25" Width="75" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1" Visibility="Hidden" />
                    <Label Content="Température : ??" Name="labelTemprature" FontStretch="Normal" FontWeight="Bold" FontSize="15" Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="1" Foreground="#FFCB3500" HorizontalContentAlignment="Right" />
                    <Label Content="Humidité Relative : ??" FontSize="15" FontStretch="Normal" FontWeight="Bold" HorizontalAlignment="Right" Name="labelRelativeHumidity" Grid.Row="3" Grid.ColumnSpan="1" Grid.Column="1" Foreground="#FFCB3500" />
                    <Label Content="CO2 : ??" FontSize="15" FontStretch="Normal" FontWeight="Bold" HorizontalAlignment="Right" Name="labelCO2" VerticalAlignment="Top" Grid.Row="5" Grid.ColumnSpan="1" Grid.Column="1" Foreground="#FFCB3500" />
                </Grid>
            </TabItem>
            <TabItem Header="Configuration">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="100*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <CheckBox Content="CheckBox" Grid.Column="1" Grid.Row="1" Height="16" HorizontalAlignment="Left" Margin="10,10,10,0" Name="checkBox1" VerticalAlignment="Top" />
                    <Label Content="Label" Grid.Column="1" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="10,32,0,0" Name="label1" VerticalAlignment="Top" />
                    <TextBox Grid.Column="1" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="54,34,0,0" Name="textBox1" VerticalAlignment="Top" Width="51" />
                    <Label Content="Label" Grid.Column="1" Grid.Row="1" Height="28" HorizontalAlignment="Left" Name="label2" VerticalAlignment="Top" Margin="111,32,0,0" />
                    <Border BorderBrush="Silver" BorderThickness="1" Grid.Column="1" Grid.Row="1" Height="183" HorizontalAlignment="Left" Name="border1" VerticalAlignment="Top" Width="280" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>