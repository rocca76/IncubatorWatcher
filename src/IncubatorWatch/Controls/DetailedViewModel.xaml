<UserControl x:Class="IncubatorWatch.Controls.DetailedViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls1="clr-namespace:IncubatorWatch.Controls"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="750"
             DataContext="{Binding RelativeSource={RelativeSource Self}}" Background="Black">
    <Grid>
        <TabControl Name="tabCtrlMother" Background="#FF454545">
            <TabItem Header="Graphique" Background="{x:Null}">
                <Grid Background="#FF6F6F6F">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="730" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="200" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="18*" />
                    </Grid.RowDefinitions>
                    <d3:ChartPlotter Name="plotterTemperature" Margin="10,10,0,10" Background="#FF6F6F6F">
                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalDateTimeAxis Name="temperatureTimeAxis" />
                        </d3:ChartPlotter.HorizontalAxis>
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalAxis Name="temperatureAxis"/>
                        </d3:ChartPlotter.VerticalAxis>
                        <d3:VerticalAxisTitle Content="Degré Celsius ( °C )" FontSize="14"/>
                    </d3:ChartPlotter>
                    <d3:ChartPlotter Name="plotterRelativeHumidity" Margin="10,10,0,10" Grid.Row="2" Background="#FF6F6F6F">
                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalDateTimeAxis Name="relativeHumidityTimeAxis" />
                        </d3:ChartPlotter.HorizontalAxis>
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalAxis Name="relativeHumidityAxis"/>
                        </d3:ChartPlotter.VerticalAxis>
                        <d3:VerticalAxisTitle Content="Pourcentage ( % )" FontSize="14"/>
                    </d3:ChartPlotter>

                    <Button Content="Button" Name="button1" Height="25" Width="76" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="1" />
                    <Button Content="Button" Name="button2" Height="25" Width="75" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right" />
                    <Label Content="Température : ??" Grid.RowSpan="3" Height="28" HorizontalAlignment="Left" Margin="33,198,0,0" Name="labelTemprature" VerticalAlignment="Top" Width="156" FontStretch="Normal" FontWeight="Bold" FontSize="15" />
                    <Label Content="Humidité Relative : ??" FontSize="15" FontStretch="Normal" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="33,197,0,0" Name="labelRelativeHumidity" VerticalAlignment="Top" Width="173" Grid.Row="2" Grid.RowSpan="2" />
                </Grid>
            </TabItem>
            <TabItem Header="About" Background="{x:Null}">
                <Grid Background="#FF6F6F6F">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="178" />
                        <ColumnDefinition Width="495" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Incubator Watcher" Height="36" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" FontSize="18" Grid.ColumnSpan="2" />
                    <Label Content="BETA" Height="36" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="label1_Copy" VerticalAlignment="Top" FontSize="12" Grid.Column="1" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>